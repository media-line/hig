<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
        <name>Слайдер партнеров</name>
        <creationDate>2015</creationDate>
        <author>gordoney</author>
        <authorEmail>sergeibolonikov@gmail.com</authorEmail>
        <version>0.1</version>
        <description>Слайдер партнеров</description>
        <files>
                <filename module="mod_slider_partners_gr">mod_slider_partners_gr.php</filename>
                <filename>mod_slider_partners_gr.xml</filename>
				<filename>index.html</filename>
				<filename>helper.php</filename>
				<folder>tmpl</folder>
				<folder>js</folder>
        </files>
	    <config>
            <fields name="params">
			    <fieldset name="basic">
					<field name="list_images"
						type="Repeatable"
						description="Логотип партнера"
						label="Логотип партнера">
						<fieldset name="list_images_modal" repeat="true">
							<field name="logo"
								label="Логотип партнера"
								size="30"
								type="media" />
						</fieldset>
					</field>
				</fieldset>
				<fieldset name="advanced">
					<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				</fieldset>
			</fields>
        </config>

</extension>
